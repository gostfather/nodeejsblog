<%- include("header") %>
<div style="position: absolute;">个人信息</div>
<% posts.forEach(function (post) {%>

<%- include("components/post-content", {post:post}) %>

<% }) %>
<div class="ui grid">
    <div class="four wide column"></div>
    <div class="eight wide column">
        <div class="ui borderless pagination menu">
            <a class="item">
                <i class="left arrow icon"></i> 上一页
            </a>
            <% for (var i = 0 ; i < count ; i++ ){ %>
            <a href="/posts?page=<%- i %>" class="item"><%- i+1 %></a>
            <% } %>
            <a class="item">
                下一页 <i class="icon right arrow"></i>
            </a>
        </div>
    </div>
</div>
<%- include("footer") %>